<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlabs.bbm.firstandroidapp_morningclass.OnTouchActivity">

    <ImageView
        android:layout_width="299dp"
        android:layout_height="245dp"
        android:id="@+id/imgView"
        android:src="@drawable/quadrants_1"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X1:"
        android:id="@+id/textView7"
        android:layout_below="@+id/imgView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/x1Edit"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="X2:"
        android:id="@+id/textView8"
        android:layout_below="@+id/imgView"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/x1Edit"
        android:layout_toEndOf="@+id/x1Edit" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/x2Edit"
        android:layout_alignBaseline="@+id/x1Edit"
        android:layout_alignBottom="@+id/x1Edit"
        android:layout_toRightOf="@+id/x1Edit"
        android:layout_toEndOf="@+id/x1Edit"
        android:enabled="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y1:"
        android:id="@+id/textView9"
        android:layout_below="@+id/x1Edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/y1Edit"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y2:"
        android:id="@+id/textView10"
        android:layout_below="@+id/x1Edit"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/y1Edit"
        android:layout_toEndOf="@+id/y1Edit" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/y2Edit"
        android:layout_alignBaseline="@+id/y1Edit"
        android:layout_alignBottom="@+id/y1Edit"
        android:layout_toRightOf="@+id/y1Edit"
        android:layout_toEndOf="@+id/y1Edit"
        android:enabled="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difference:"
        android:id="@+id/textView11"
        android:layout_below="@+id/y1Edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/differenceEditText"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quadrant:"
        android:id="@+id/textView12"
        android:layout_below="@+id/differenceEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/quadrantEditText"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:focusableInTouchMode="false"/>
</RelativeLayout>
